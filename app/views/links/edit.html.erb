<div class="text-center green-font">
  <%= form_for @link, url: link_path, method: "PUT" do |f| %>
    <h4><%= f.label :title %></h4>
    <h4><%= f.text_field :title, value: @link.title %></h4>
    <h4><%= f.label :url %></h4>
    <h4><%= f.text_field :url, value: @link.url %></h4>
    <%= f.submit "Update Link", class: "btn btn-default btn-font-size" %>
  <% end %>
</div>
